@model IEnumerable<FCCNet5.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<div class="row mb-5">
    <div class="col-6">
        <h1 class="text-primary">Categories</h1>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Create">Create New Category</a>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Display Order</th>
                <th>Category Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.Name</td>
                    <td class="w-25 text-right">
                            <div class="d-flex justify-content-end">
                                <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-info mr-2"><span class="mdi mdi-pencil"></span></a>
                                <form asp-action="Delete" method="post">
                                    <input value="@obj.Id" name="Id" hidden>
                                    <button class="btn btn-danger"><span class="mdi mdi-delete"></span></button>
                                </form>
                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Categories to show</p>
}
